<Window x:Class="Ball_Customizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ball_Customizer"
        mc:Ignorable="d"
        Title="Start" Height="450" Width="800" Icon="icon.png">
    <Grid x:Name="Mainball" DataContext="{Binding Mode=OneWay, Source={StaticResource custom}}">

        <Image Source="Image8.png" Stretch="Fill"/>

        <Label Content="BALL CUSTOMIZER" HorizontalAlignment="Left" Margin="237,65,0,0" VerticalAlignment="Top" Height="57" Width="317" FontSize="36" FontFamily="Stencil"/>
        <Button Content="Start Customizing" HorizontalAlignment="Left" Margin="282,218,0,0" VerticalAlignment="Top" Width="220" FontSize="20" Height="63" Click="Button_Click" FontFamily="Stencil" BorderThickness="3,1,1,1">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        

    </Grid>
</Window>
